<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_addimageview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/star"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_showtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="@color/white"
        android:textSize="@dimen/super_text_size" />

    <TextView
        android:id="@+id/tv_showalarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_showtime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="闹钟未设置"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text_size" />

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_showalarm"
        android:layout_alignTop="@id/tv_showalarm"
        android:layout_below="@id/tv_showtime"
        android:layout_toEndOf="@id/tv_showalarm"
        android:src="@drawable/edit" />

    <Button
        android:id="@+id/bt_finish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="72dp"
        android:background="@drawable/circle_shape"
        android:text="长按以结束睡眠"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_showtip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:textColor="@color/white" />


</RelativeLayout>